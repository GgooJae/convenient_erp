<mvc:View
    controllerName="convenienterp.controller.Check_Inventory"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    displayBlock="true">

    <Page>
        <headerContent>
            <mvc:XMLView viewName="convenienterp.view.common.NavigationBar"/>
        </headerContent>
        <content>
            <VBox>
                <HBox justifyContent="Start" alignItems="Center" class="filterBar">

                    <!-- 품목명 필터 -->
                    <Label text="품목명" class="Labelf"/>
                    <Input id="orderItemNameFilterCI" placeholder="품목명 입력" width="150px"/>
                                      
                    <!-- 수량 필터 -->
                    <Label text="수량" class="Label"/>
                    <Input id="quantityMinFilterCI" placeholder="최소 수량" width="100px"/>
                    <Label text="~"/>
                    <Input id="quantityMaxFilterCI" placeholder="최대 수량" width="100px"/>
                    
                    
                    <!-- 필터 적용 버튼 -->
                    <Button text="필터 적용" press="onApplyFilter" class="filterButton2"/>

                    
                </HBox>
            </VBox>
            <table:Table
                id="orderHistoryTableCI"
                rows="{/zcap_stocksSet}"
                visibleRowCount="15"
                selectionMode="None"
                enableColumnReordering="true"
                width="auto">
                <table:columns>
                    <table:Column>
                        <Label text="물품 ID" />
                        <table:template>
                            <Text text="{StockId}" />
                        </table:template>
                    </table:Column>
                    <table:Column>
                        <Label text="주문자 ID" />
                        <table:template>
                            <Text text="{UserId}" />
                        </table:template>
                    </table:Column>
                    <table:Column>
                        <Label text="주문자" />
                        <table:template>
                            <Text text="{UserNum}" />
                        </table:template>
                    </table:Column>
                    <table:Column>
                        <Label text="품목명" />
                        <table:template>
                            <Text text="{StockName}" />
                        </table:template>
                    </table:Column>
                    <table:Column>
                        <Label text="수량" />
                        <table:template>
                            <Text text="{StockQuan}" />
                        </table:template>
                    </table:Column>                                                
                </table:columns>
            </table:Table>
            <Toolbar>
                <ToolbarSpacer/>
                <HBox>
                    <Button text="1" press="onPageSelect" />
                    <Button text="2" press="onPageSelect" />
                    <Button text="3" press="onPageSelect" />
                    <Button text="4" press="onPageSelect" />
                    <Button text="5" press="onPageSelect" />
                </HBox>
            </Toolbar>
        </content>
    </Page>
</mvc:View>